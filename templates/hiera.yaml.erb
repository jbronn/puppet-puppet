---
<% if @backends.count > 0 -%>
:backends:
<%   @backends.each do |backend| -%>
  - <%= backend %>
<%   end
   end -%>
<% if @settings.count > 0
     @backends.each do |backend|
       if @settings.has_key?(backend) -%>
:<%= backend %>:
<%       @settings[backend].keys.sort.each do |setting| -%>
  :<%= setting %>: <%= @settings[backend][setting] %>
<%       end
       end
     end
   end -%>
<% if @hierarchy.count > 0 -%>
:hierarchy:
<%   @hierarchy.each do |hierarchy_source| -%>
  - <%= hierarchy_source %>
<%   end
   end -%>
<% if @logger %>
:merge_behavior: <%= @merge_behavior %>
:logger: <%= @logger %>
<% end -%>
